<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/address_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:visibility="visible">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/address_content_inner_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.shopiroller.views.legacy.ShopirollerTextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/address_title"
            android:layout_width="0dp"
            app:sColorType="primary"
            app:sSizeType="heading_two"
            android:layout_height="wrap_content"
            android:text="Evim" />

        <com.shopiroller.views.legacy.ShopirollerTextView
            android:id="@+id/address_description_first"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            app:sSizeType="paragraph_one"
            app:sColorType="text"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Erenköy Mahallesi 4858 Sk. No:18
Kepez/Antalya
Bekir Çelik - 0(542) 378 87 81"
            app:layout_constraintTop_toBottomOf="@id/address_title" />

        <com.shopiroller.views.legacy.ShopirollerTextView
            android:id="@+id/address_description_second"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:ellipsize="end"
            app:sSizeType="paragraph_one"
            app:sColorType="text"
            android:maxLines="1"
            android:text="Erenköy Mahallesi 4858 Sk. No:18
Kepez/Antalya
Bekir Çelik - 0(542) 378 87 81"
            app:layout_constraintTop_toBottomOf="@id/address_description_first" />

        <com.shopiroller.views.legacy.ShopirollerTextView
            android:id="@+id/address_description_third"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            app:sSizeType="paragraph_one"
            app:sColorType="text"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Erenköy Mahallesi 4858 Sk. No:18
Kepez/Antalya
Bekir Çelik - 0(542) 378 87 81"
            app:layout_constraintTop_toBottomOf="@id/address_description_second" />


        <ImageView
            android:layout_width="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:rotation="270"
            app:srcCompat="@drawable/ic_keyboard_arrow_down_24dp"
            android:tint="@color/black"
            android:layout_height="30dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>